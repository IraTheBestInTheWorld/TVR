<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg01" />

    <TextView
        android:id="@+id/level"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background = "@drawable/level"
        android:text="1"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:textSize="18dp"
        android:fontFamily="@font/nunito_black"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/level_number"
        />


    <LinearLayout
        android:id="@+id/gameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/needToGuess"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="260dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/letter1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:width="100dp"
                android:height="100dp"
                android:background="@color/white"
                android:backgroundTintMode="add"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:text="M"
                android:tooltipText="empty"
                android:textColor="#475A90"
                android:textSize="32sp"
                app:lineHeight="25dp" />

            <TextView
                android:id="@+id/letter2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:text="A"
                android:gravity="center"
                android:tooltipText="empty"
                android:textColor="#475A90"
                android:textSize="32sp"
                app:lineHeight="25dp" />

            <TextView
                android:id="@+id/letter3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:text="G"
                android:gravity="center"
                android:tooltipText="empty"
                android:textColor="#475A90"
                android:textSize="32sp"
                app:lineHeight="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/letter4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:text="O"
                android:gravity="center"
                android:tooltipText="empty"
                android:textColor="#475A90"
                android:textSize="32sp"
                app:lineHeight="25dp" />

            <TextView
                android:id="@+id/letter5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:text="P"
                android:textAlignment="center"
                android:gravity="center"
                android:tooltipText="empty"
                android:textColor="#475A90"
                android:textSize="32sp"
                app:lineHeight="25dp" />

            <TextView
                android:id="@+id/letter6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:text="I"
                android:gravity="center"
                android:textAlignment="center"
                android:tooltipText="empty"
                android:textColor="#475A90"
                android:textSize="32sp"
                app:lineHeight="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/letter7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:text="N"
                android:gravity="center"
                android:textAlignment="center"
                android:tooltipText="empty"
                android:textColor="#475A90"
                android:textSize="32sp"
                app:lineHeight="25dp" />

            <TextView
                android:id="@+id/letter8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:text="E"
                android:gravity="center"
                android:textAlignment="center"
                android:tooltipText="empty"
                android:textColor="#475A90"
                android:textSize="32sp"
                app:lineHeight="25dp" />

            <TextView
                android:id="@+id/letter9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:fontFamily="@font/nunito_bold"
                android:text="C"
                android:gravity="center"
                android:textAlignment="center"
                android:tooltipText="empty"
                android:textColor="#475A90"
                android:textSize="32sp"
                app:lineHeight="25dp" />

        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:id="@+id/needToGuess"
        android:layout_width="321dp"
        android:layout_height="78dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="112dp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/need_to_guess">


        <TextView
            android:id="@+id/ntg_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Магия"
            android:textColor="@color/white"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/ntg_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="44dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Открыть"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnGuessWord"
        android:layout_width="222dp"
        android:layout_height="74dp"
        app:layout_constraintStart_toStartOf="@id/gameField"
        app:layout_constraintTop_toBottomOf="@id/gameField"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/guess_word"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="591dp" />

    <ImageButton
        android:id="@+id/btnErase"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/btnGuessWord"
        app:layout_constraintEnd_toEndOf="@id/gameField"
        app:srcCompat="@drawable/erase_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>