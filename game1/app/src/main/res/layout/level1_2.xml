<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg01" />

    <ImageView
        android:id="@+id/words"
        android:layout_width="321dp"
        android:layout_height="78dp"
        android:layout_marginTop="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/field_words" />

    <ImageView
        android:id="@+id/level"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/words"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/level_number" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@id/words"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/letter1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="#475A90"
                android:fontFamily="@font/nunito_bold"
                android:textSize="32sp"
                android:text="M" />

            <Button
                android:id="@+id/letter2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="#475A90"
                android:fontFamily="@font/nunito_bold"
                android:textSize="32sp"
                android:text="A" />

            <Button
                android:id="@+id/letter3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="#475A90"
                android:fontFamily="@font/nunito_bold"
                android:textSize="32sp"
                android:text="G" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/letter4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="#475A90"
                android:fontFamily="@font/nunito_bold"
                android:textSize="32sp"
                android:text="O" />

            <Button
                android:id="@+id/letter5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="#475A90"
                android:fontFamily="@font/nunito_bold"
                android:textSize="32sp"
                android:text="P" />

            <Button
                android:id="@+id/letter6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="#475A90"
                android:fontFamily="@font/nunito_bold"
                android:textSize="32sp"
                android:text="I" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/letter7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="#475A90"
                android:fontFamily="@font/nunito_bold"
                android:textSize="32sp"
                android:text="N" />

            <Button
                android:id="@+id/letter8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="#475A90"
                android:fontFamily="@font/nunito_bold"
                android:textSize="32sp"
                android:text="E" />

            <Button
                android:id="@+id/letter9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/white"
                android:textColor="#475A90"
                android:fontFamily="@font/nunito_bold"
                android:textSize="32sp"
                android:text="C" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>